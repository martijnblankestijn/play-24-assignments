# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                               controllers.Application.index
GET           /api/addresscheck               address.controllers.AddressController.getAddress(postalCode: String, houseNumber: Int)
GET           /api/persons                    person.controllers.PersonController.persons()
GET           /api/persons/:id/details        person.controllers.PersonController.getPersonDetails(id: Long)
GET           /api/persons/:id                person.controllers.PersonController.get(id: Long)
POST          /api/persons                    person.controllers.PersonController.saveNew
PUT           /api/persons/:id                person.controllers.PersonController.update(id: Long)
DELETE        /api/persons/:id                person.controllers.PersonController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

# Provide sourcemaps for debuggin typescript
GET           /app/assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET           /webjars/*file                  controllers.WebJarAssets.at(file)

